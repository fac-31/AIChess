<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="AvaloniaChessApp.Views.MainWindow"
        Title="AI Chess"
        Background="LightGray">
    <Grid ColumnDefinitions="*" RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="AI Chess" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,10"/>
        
        <!-- Chess Board -->
        <Canvas Grid.Row="1" Name="ChessBoard" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="400" Height="400"/>
        
        <!-- Status Bar -->
        <TextBlock Grid.Row="2" Text="{Binding Status}" 
                   HorizontalAlignment="Center" Margin="0,10,0,10"/>
    </Grid>
</Window>
